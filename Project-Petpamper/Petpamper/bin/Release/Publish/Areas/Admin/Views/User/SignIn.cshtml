
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Areas/Admin/Views/Shared/_SignInLayout.cshtml";
}

<!-- BEGIN LOGIN FORM -->
<form class="login-form">
    <h3 class="form-title">Đăng nhập hệ thống</h3>
    <input type="hidden" id="return_url" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Tên tài khoản</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Tên tài khoản" id="txtUsername" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Mật khẩu" id="txtPassword" />
        </div>
    </div>
    <div class="form-actions">
        <label class="checkbox">
            <input type="checkbox" id="chkRememberMe" value="1" /> Ghi nhớ?
        </label>
        <button type="button" id="btnSignIn" class="btn green-haze pull-right">
            Đăng nhập <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
    <div class="forget-password">
        <h4>Bạn quên mật khẩu ?</h4>
        <p>
            đừng lo lắng, nhấn <a href="javascript:;" id="forget-password">
                vào đây
            </a>
            để đặt lại mật khẩu.
        </p>
    </div>
</form>
<!-- END LOGIN FORM -->
<!-- BEGIN FORGOT PASSWORD FORM -->
<form class="forget-form" action="index.html" method="post">
    <h3>Quên mật khẩu ?</h3>
    <p>
        Nhập email của bạn để đặt lại mật khẩu.
    </p>
    <div class="form-group">
        <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
        </div>
    </div>
    <div class="form-actions">
        <button type="button" id="back-btn" class="btn">
            <i class="m-icon-swapleft"></i> Trở về
        </button>
        <button type="submit" class="btn green-haze pull-right">
            Gửi <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
</form>
<!-- END FORGOT PASSWORD FORM -->