
@model PetPamper.Areas.Admin.Models.HoaDonModel
@{
    ViewBag.Title = "Thêm Hóa Đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form method="post" action="/Admin/HoaDon/Them">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã HD</label>
                <input type="text" name="MaHD" class="form-control" placeholder="Mã hóa đơn" value="@Model.MaHD" id="txtMaHD" />
                @Html.ValidationMessageFor(model => model.MaHD)
            </div>
            <div class="form-group">
                <label>Mã Lịch</label>
                <input type="text" name="MaLich" class="form-control" placeholder="Mã lịch" value="@Model.MaLich" id="txtMaLich" />
                @Html.ValidationMessageFor(model => model.MaLich)
            </div>
            <div class="form-group">
                <label>Tổng tiền</label>
                <input type="text" name="Tongtien" class="form-control" placeholder="Tổng tiền" value="@Model.Tongtien" id="txtTongtien" />
                @Html.ValidationMessageFor(model => model.Tongtien)
            </div>
        </div>
    </div>
    <button class="btn btn-primary" id="btnSaveProfile">Lưu</button>
</form>
